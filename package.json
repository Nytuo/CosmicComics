{
  "name": "cosmiccomics",
  "productName": "Cosmic-Comics",
  "build": {
    "artifactName": "Cosmic-Comics_${version}_${os}_${arch}.${ext}",
    "files": [
      "**/*",
      "!FirstImageOfAll${/*}",
      "!tmp${/*}",
      "!languages/dev.json"
    ],
    "asar": false,
    "appId": "com.Nytuo.CosmicComics",
    "nsis": {
      "oneClick": true,
      "runAfterFinish": false,
      "createDesktopShortcut": "always",
      "perMachine": true
    },
    "snap": {
      "confinement": "strict"
    },
    "publish": [
      {
        "provider": "github",
        "repo": "CosmicComics",
        "owner": "Nytuo",
        "vPrefixedTagName": true,
        "host": "github.com",
        "protocol": "https"
      }
    ],
    "win": {
      "fileAssociations": [
        {
          "ext": "cosmic",
          "description": "Cosmic Comics Cover"
        },
        {
          "ext": "cbz",
          "description": "Comic Book Zip"
        },
        {
          "ext": "cbr",
          "description": "Comic Book RAR"
        },
        {
          "ext": "cbt",
          "description": "Comic Book TAR"
        },
        {
          "ext": "cb7",
          "description": "Comic Book 7z"
        }
      ],
      "publish": [
        "github"
      ],
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        }
      ],
      "icon": "Images/Logo.ico"
    },
    "linux": {
      "publish": [
        "github"
      ],
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        },
        {
          "target": "snap"
        }
      ],
      "icon": "Images/Logo.png",
      "category": "Utility"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "version": "2.0.0",
  "description": "PLEX / JELLYFIN for Comics and Manga",
  "author": {
    "name": "Nytuo",
    "email": "nytuo.yt@gmail.com"
  },
  "repository": "https://github.com/Nytuo/CosmicComics.git",
  "license": "GPL-3.0-only",
  "private": false,
  "scripts": {
    "serv": "nodemon server.js"
  },
  "dependencies": {
    "7zip-bin": "^5.1.1",
    "@popperjs/core": "^2.9.2",
    "anilist-node": "^1.11.2",
    "anilist.js": "^1.2.1",
    "bootstrap": "^5.0.2",
    "color-thief-browser": "^2.0.2",
    "color-thief-node": "^1.0.4",
    "comicgeeks": "^1.1.0",
    "cors": "^2.8.5",
    "discord-rpc": "^4.0.1",
    "download": "^8.0.0",
    "express": "^4.17.2",
    "github-content": "^1.0.1",
    "html-magnifier": "^2.0.2",
    "node-7z": "^3.0.0",
    "nodemon": "^2.0.15",
    "puppeteer": "^13.5.1",
    "sqlite3": "^4.2.0",
    "unrar": "^0.2.0",
    "unrar-binaries": "^1.1.0",
    "webp-converter": "^2.3.3"
  }
}
