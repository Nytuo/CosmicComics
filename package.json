{
  "name": "cosmiccomics",
  "productName": "Cosmic-Comics",
  "version": "2.0.0",
  "description": "PLEX / JELLYFIN for Comics and Manga",
  "author": {
    "name": "Nytuo",
    "email": "nytuo.yt@gmail.com"
  },
  "build": {
    "npmRebuild": true,
    "artifactName": "Cosmic-Comics_${version}_${os}_${arch}.${ext}",
    "files": [
      "**/*",
      "!FirstImageOfAll${/*}",
      "!tmp${/*}",
      "!languages/dev.json",
      "!CosmicData${/*}"
    ],
    "asar": false,
    "appId": "com.Nytuo.CosmicComics",
    "nsis": {
      "oneClick": true,
      "runAfterFinish": false,
      "createDesktopShortcut": "always",
      "perMachine": true
    },
    "snap": {
      "confinement": "strict"
    },
    "publish": [
      {
        "provider": "github",
        "repo": "CosmicComics",
        "owner": "Nytuo",
        "vPrefixedTagName": true,
        "host": "github.com",
        "protocol": "https"
      }
    ],
    "win": {
      "publish": [
        "github"
      ],
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "public/Images/Logo.ico"
    },
    "linux": {
      "publish": [
        "github"
      ],
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        },
        {
          "target": "snap"
        }
      ],
      "icon": "public/Images/Logo.png",
      "category": "Utility"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "repository": "https://github.com/Nytuo/CosmicComics.git",
  "license": "GPL-3.0-only",
  "private": false,
  "pkg": {
    "assets": [
      "node_modules/canvas/**/*.*",
      "*"
    ],
    "targets": [
      "node16-win-x64"
    ],
    "outputPath": "dist"
  },
  "main": "main.js",
  "scripts": {
    "serv": "nodemon server.js",
    "start": "electron-forge start",
    "dist": "electron-builder",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.65",
    "@electron-forge/maker-deb": "^6.0.0-beta.65",
    "@electron-forge/maker-rpm": "^6.0.0-beta.65",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.65",
    "@electron-forge/maker-zip": "^6.0.0-beta.65",
    "electron": "^19.0.10",
    "electron-rebuild": "^3.2.8"
  },
  "dependencies": {
    "7zip-bin": "^5.1.1",
    "@popperjs/core": "^2.9.2",
    "anilist-node": "^1.11.2",
    "anilist.js": "^1.2.1",
    "bootstrap": "^5.0.2",
    "color-extr-thief": "^2.3.4",
    "cors": "^2.8.5",
    "download": "^8.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^5.2.1",
    "express": "^4.17.2",
    "github-content": "^1.0.1",
    "html-magnifier": "^2.0.2",
    "node-7z": "^3.0.0",
    "nodemon": "^2.0.15",
    "sqlite3": "^4.2.0",
    "unrar": "^0.2.0",
    "unrar-binaries": "^1.1.0",
    "webp-converter": "^2.3.3"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "cosmiccomics"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
