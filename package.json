{
    "name": "cosmiccomics",
    "productName": "Cosmic Comics",
    "build": {
        "files": [
            "**/*",
            "!FirstImageOfAll${/*}",
            "!tmp${/*}"
        ],
        "asar": false,
        "appId": "com.Nytuo.CosmicComics",
        "nsis": {
            "oneClick": true,
            "runAfterFinish": false,
            "createDesktopShortcut": "always"
        },
        "snap": {
            "confinement": "strict"
        },
        "publish": [
            {
                "provider": "github",
                "repo": "CosmicComics",
                "owner": "Nytuo",
                "vPrefixedTagName": true,
                "host": "github.com",
                "protocol": "https"
            }
        ],
        "win": {
            "publish": [
                "github"
            ],
            "target": [
                "nsis",
                "zip"
            ],
            "icon": "Images/Logo.ico"
        },
        "linux": {
            "publish": [
                "github"
            ],
            "target": [
                "AppImage",
                "snap",
                "zip"
            ],
            "icon": "Images/Logo.png",
            "category": "Utility"
        }
    },
    "version": "0.0.23",
    "description": "Comics and Manga Collection Viewer",
    "main": "main.js",
    "author": {
        "name": "Nytuo",
        "email": "nytuo.yt@gmail.com"
    },
    "repository": "https://github.com/Nytuo/CosmicComics.git",
    "license": "GPL-3.0-only",
    "private": false,
    "devDependencies": {
        "electron": "^13.1.6",
        "electron-builder": "^22.11.7"
    },
    "scripts": {
        "postinstall": "electron-builder install-app-deps",
        "dist": "electron-builder",
        "devBuild": "electron-builder --x64 -p never",
        "start": "electron .",
        "prodBuild": "electron-builder --x64 -p always"
    },
    "dependencies": {
        "7zip-bin": "^5.1.1",
        "@popperjs/core": "^2.9.2",
        "bootstrap": "^5.0.2",
        "bootstrap-icons": "^1.5.0",
        "color-thief-browser": "^2.0.2",
        "discord-rich-presence": "^0.0.8",
        "discord-rpc": "^4.0.1",
        "download": "^8.0.0",
        "electron-updater": "^4.3.9",
        "github-content": "^1.0.1",
        "html-magnifier": "^2.0.2",
        "node-7z": "^3.0.0",
        "unrar": "^0.2.0",
        "upscaler": "^0.8.22"
    }
}
