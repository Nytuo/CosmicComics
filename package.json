{
  "name": "cosmiccomics",
  "productName": "Cosmic-Comics",
  "version": "2.0.0",
  "description": "Server based Books (Comics and Manga) Reader",
  "author": {
    "name": "Nytuo",
    "email": "nytuo.yt@gmail.com"
  },
  "build": {
    "artifactName": "Cosmic-Comics_${version}_${os}_${arch}.${ext}",
    "files": [
      "**/*",
      "!FirstImageOfAll${/*}",
      "!tmp${/*}",
      "!languages/dev.json",
      "!CosmicData${/*}"
    ],
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "npmRebuild": false,
    "asar": false,
    "appId": "com.Nytuo.CosmicComics",
    "nsis": {
      "oneClick": true,
      "runAfterFinish": false,
      "createDesktopShortcut": "always",
      "perMachine": false
    },
    "snap": {
      "confinement": "strict"
    },
    "flatpak": {
      "runtimeVersion": 22.08,
      "baseVersion": 22.08
    },
    "appx": {
      "displayName": "Cosmic Comics",
      "identityName": "63948Nytuo.CosmicComics",
      "publisher": "CN=65511420-BCA9-4A4C-A702-D5D8735EC387",
      "applicationId": "CosmicComics",
      "publisherDisplayName": "Nytuo"
    },
    "publish": [
      {
        "provider": "github",
        "repo": "CosmicComics",
        "owner": "Nytuo",
        "vPrefixedTagName": true,
        "host": "github.com",
        "protocol": "https"
      }
    ],
    "win": {
      "publish": [
        "github"
      ],
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        },
        {
          "target": "appx",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        }
      ],
      "icon": "public/Images/Logo.ico"
    },
    "linux": {
      "publish": [
        "github"
      ],
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "snap"
        },
        {
          "target": "flatpak"
        }
      ],
      "icon": "public/Images/Logo.png",
      "category": "Utility"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "workspaces": [
    "server"
  ],
  "repository": "https://github.com/Nytuo/CosmicComics.git",
  "license": "GPL-3.0-only",
  "private": false,
  "main": "main.js",
  "scripts": {
    "get-bfe": "node ./get-BFE.js",
    "start": "node ./get-BFE.js && electron .",
    "no-update": "electron .",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^26.2.2",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-updater": "^6.1.4",
    "https": "^1.0.0",
    "node-7z": "3.0.0",
    "7zip-bin": "5.2.0",
    "simple-git": "^3.15.1"
  }
}
