{
  "name": "cosmiccomics",
  "productName": "Cosmic-Comics",
  "version": "2.0.0",
  "description": "Server based Books (Comics and Manga) Reader",
  "author": {
    "name": "Nytuo",
    "email": "nytuo.yt@gmail.com"
  },
  "build": {
    "artifactName": "Cosmic-Comics_${version}_${os}_${arch}.${ext}",
    "files": [
      "**/*",
      "!FirstImageOfAll${/*}",
      "!tmp${/*}",
      "!languages/dev.json",
      "!CosmicData${/*}"
    ],
    "asar": false,
    "appId": "com.Nytuo.CosmicComics",
    "nsis": {
      "oneClick": true,
      "runAfterFinish": false,
      "createDesktopShortcut": "always",
      "perMachine": false
    },
    "snap": {
      "confinement": "strict"
    },
    "publish": [
      {
        "provider": "github",
        "repo": "CosmicComics",
        "owner": "Nytuo",
        "vPrefixedTagName": true,
        "host": "github.com",
        "protocol": "https"
      }
    ],
    "win": {
      "publish": [
        "github"
      ],
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "public/Images/Logo.ico"
    },
    "linux": {
      "publish": [
        "github"
      ],
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        },
        {
          "target": "snap"
        }
      ],
      "icon": "public/Images/Logo.png",
      "category": "Utility"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "repository": "https://github.com/Nytuo/CosmicComics.git",
  "license": "GPL-3.0-only",
  "private": false,
  "main": "main.js",
  "scripts": {
    "serv": "nodemon server.js",
    "start": "electron .",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^23.0.0-alpha.3",
    "electron-builder": "^24.0.0-alpha.8"
  },
  "dependencies": {
    "7zip-bin": "^5.1.1",
    "@electron/remote": "^2.0.9",
    "@popperjs/core": "^2.9.2",
    "anilist-node": "^1.13.1",
    "bootstrap": "^5.0.2",
    "canvas": "^2.11.0",
    "color-extr-thief": "^2.3.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.0.3",
    "download": "^8.0.0",
    "electron-updater": "^5.2.1",
    "express": "^4.17.2",
    "html-magnifier": "^2.0.2",
    "multer": "^1.4.5-lts.1",
    "node-7z": "^3.0.0",
    "nodemon": "^2.0.15",
    "pdf-extractor": "^2.2.0",
    "puppeteer": "^19.4.0",
    "simple-git": "^3.15.1",
    "sqlite3": "^5.0.11",
    "tinycolor2": "^1.4.2",
    "unrar": "^0.2.0",
    "unrar-binaries": "^1.1.0",
    "webp-converter": "^2.3.3"
  },
  "overrides": {
    "pdf-extractor": {
      "dependencies": {
        "canvas": "^2.10.2"
      }
    }
  }
}
